@using CorporationHR.Helpers
@model CorporationHR.Models.SecurityOfTable

@{
    ViewBag.Title = "Details";
    var canEdit = ClereancesHelper.Instance.CheckIfUserCanEditAndDeleteContent(User.Identity.Name, "Security Of Tables");
}

<h2>Details</h2>

<fieldset>
    <legend>Table details</legend>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.TableName)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.TableName)
    </div>
    <div class="display-label">
        @Html.DisplayName("Clearance")
    </div>
    <div class="display-field" style="background-color: @Model.ClearenceModel.ClearenceRgbColor">
        @Html.DisplayFor(model => model.ClearenceModel.ClearenceName) (Weight:
        @Html.DisplayFor(model => model.ClearenceModel.ClearenceWeight) )
    </div>
</fieldset>
<p>
    @{
        if (canEdit)
        {
            @Html.ActionLink("Edit", "Edit", new { id=Model.TableId })
        }
    }
    
    @Html.ActionLink("Back to List", "Index")
</p>

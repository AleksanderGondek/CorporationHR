@using CorporationHR.Helpers
@model CorporationHR.Models.Patent

@{
    ViewBag.Title = "Details";
    var canEdit = ClereancesHelper.Instance.CheckIfUserCanEditAndDeleteContent(User.Identity.Name, "Patents");
}

<h2>Details</h2>

<fieldset>
    <legend>Patent</legend>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.PatentName)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.PatentName)
    </div>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.PatentText)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.PatentText)
    </div>
</fieldset>
<p>
    @{
        if (canEdit)
        {
            @Html.ActionLink("Edit", "Edit", new { id=Model.PatentId })    
        }
        @Html.ActionLink("Back to List", "Index")                
    }

</p>

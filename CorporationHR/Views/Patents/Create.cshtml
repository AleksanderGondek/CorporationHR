@model CorporationHR.Models.Patent

@{
    ViewBag.Title = "Add new patent";
}

<h2>Add new patent</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>New Patent</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.PatentName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PatentName)
            @Html.ValidationMessageFor(model => model.PatentName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.PatentText)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PatentText)
            @Html.ValidationMessageFor(model => model.PatentText)
        </div>

        <p>
            <input type="submit" value="Add new patent" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

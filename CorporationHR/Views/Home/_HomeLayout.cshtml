        </div>
        
        @RenderBody()

        <hr class="featurette-divider-footer2">

        <footer>
            <p class="pull-right2"><a href="#">Back to top</a></p>
            <p class="footer2">&copy; @DateTime.Now.Year - CorporationTech &middot; @Html.ActionLink("Home", "Index", "Home")  &middot; @Html.ActionLink("About", "About", "Home")  &middot; @Html.ActionLink("Contact", "Contact", "Home")

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <link href="~/Content/dist/ico/favicon.png" rel="shortcut icon" type="image/x-icon" />
    <title>@ViewBag.Title - CorporationTech</title>

    <script src="~/Scripts/jquery2.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/holder.js"></script>

    <link href="@Url.Content("~/Content/dist/css/bootstrap.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/dist/css/carousel.css")" rel="stylesheet" type="text/css" />  

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>

@using CorporationHR.Helpers
@model IEnumerable<CorporationHR.Models.ClearenceModel>

@{
    ViewBag.Title = "Index";
    var canEdit = ClereancesHelper.Instance.CheckIfUserCanEditAndDeleteContent(User.Identity.Name, "Clearence Models");
}

<h2>Clearances Index</h2>

@{
    if (canEdit)
    {
        <p>
            @Html.ActionLink("Create New Clearance", "Create")
        </p>
    }
}
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ClearenceWeight)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClearenceName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClearenceRgbColor)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ClearenceWeight)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ClearenceName)
        </td>
        <td style="background-color: @item.ClearenceRgbColor">
            @Html.DisplayFor(modelItem => item.ClearenceRgbColor)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.ClearenceId })
            @{
                if (canEdit)
                {
                    <span>&#8226;</span>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ClearenceId })
                    <span>&#8226;</span>
                    @Html.ActionLink("Delete", "Delete", new { id = item.ClearenceId })                    
                }
            }
        </td>
    </tr>
}

</table>
